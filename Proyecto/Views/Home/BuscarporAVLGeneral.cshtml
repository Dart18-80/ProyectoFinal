@model IEnumerable<Proyecto.Models.DatosPaciente>

@{
    ViewData["Title"] = "BuscarporAVLGeneral";
}

<h1>Buscar por AVL General</h1>
<form asp-action="BuscarporAVLGeneral" method="get">
    <div class="from-action no-gutters">
        <p>
            Por Nombre:<input type="text" name="BuscarNombre" value="@ViewData["BusquedaNomb"]" /> 
            <input type="submit" value="Buscar" class="btn btn-primary" />
        </p>
    </div>
</form>
<form asp-action="BuscarporAVLGeneral" method="get">
    <div class="from-action no-gutters">
        <p>
            Por Apellido :<input type="text" name="BuscarApellido" value="@ViewData["BusquedaApe"]" />
            <input type="submit" value="Buscar" class="btn btn-primary" />
        </p>
    </div>
</form>
<form asp-action="BuscarporAVLGeneral" method="get">
    <div class="from-action no-gutters">
        <p>
            Por DPI:<input type="text" name="BuscarDPI" value="@ViewData["BusquedaDpi"]" />
            <input type="submit" value="Buscar" class="btn btn-primary" />
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombrePaciente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApellidoPaciente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DPIPartidadenacimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Edad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Municipio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prioridad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NombrePaciente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApellidoPaciente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DPIPartidadenacimiento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Edad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Departamento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Municipio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prioridad)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
        }
    </tbody>
</table>
